{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Inventory",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "inventory" // Nome do seu app no monorepo (se aplic√°vel)
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/apps/inventory/**/*.js" // Ajuste conforme sua estrutura
      ],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector"
    },
    {
      "name": "Debug Order",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "order"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/apps/order/**/*.js"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector"
    }
  ]
}